<UserControl x:Class="Auto_Translation.controls.UCToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Auto_Translation.controls"
              xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ToolBar>
        <Button Content="{DynamicResource ToolBar_Open}" cal:Message.Attach="ChangeTheme" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <Button Content="{DynamicResource ToolBar_Lang}" cal:Message.Attach="ChangeTheme" 
                HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click"/>


    </ToolBar>
</UserControl>
